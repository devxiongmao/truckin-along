<div class="form-container">
  <h2 class="page-title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'styled-form') do |f| %>
    <div class="form-group">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-input' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <label>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, nil, class: 'form-label' %>
        </label>
      </div>
    <% end %>

    <div class="details-actions">
      <%= f.submit "Log in", class: 'primary-button' %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
